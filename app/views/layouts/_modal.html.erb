<!-- Modals -->

<div class="modal" id="log_in" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal log_in</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p> <%= link_to "Log in", new_user_session_path, class: "nav-link" %> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="modal" id="sign_up" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal sign_up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p> <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %> </p>
      </div>
    </div>
  </div>
</div>

  <div class="modal" id="log_out" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Modal log_out</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p> <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %> </p>
          </div>
        </div>
      </div>
    </div>

    <div class="modal" id="new_task"  tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal new_task</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p> <%= link_to "New task", new_task_path, class: "nav-link" %> </p>
        </div>
      </div>
    </div>
  </div>
